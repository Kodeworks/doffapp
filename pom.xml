    <modelVersion>4.0.0</modelVersion>
    <artifactId>doffapp</artifactId>
    <groupId>com.kodeworks</groupId>
    <version>0.0.1-SNAPSHOT</version>
    <inceptionYear>2015</inceptionYear>
    <description>Scala model update</description>

    <properties>
        <akka-streams.version>2.0.2</akka-streams.version>
        <akka.version>2.4.1</akka.version>
        <argonaut.version>6.1</argonaut.version>
        <argonaut-shapeless.version>6.1</argonaut-shapeless.version>
        <breeze.version>0.11.2</breeze.version>
        <epic.version>0.3.1</epic.version>
        <HikariCP.version>2.4.3</HikariCP.version>
        <h2.version>1.4.190</h2.version>
        <jsoup.version>1.8.3</jsoup.version>
        <junit.version>4.12</junit.version>
        <logback.version>1.1.3</logback.version>
        <maven-compiler-plugin.version>3.3</maven-compiler-plugin.version>
        <mysql-connector-java.version>5.1.38</mysql-connector-java.version>
        <scala.version>2.11.7</scala.version>
        <scala-maven-plugin.version>3.2.2</scala-maven-plugin.version>
        <scalamacros.version>2.1.0</scalamacros.version>
        <shapeless.version>2.2.5</shapeless.version>
        <slick.version>3.1.1</slick.version>
        <slickext.version>0.0.4</slickext.version>
        <stanford-nlp.version>3.5.2</stanford-nlp.version>
    </properties>

    <repositories>
        <repository>
            <id>Jilen Bintray Repo</id>
            <url>http://dl.bintray.com/jilen/maven</url>
        </repository>
    </repositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven-compiler-plugin.version}</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>net.alchim31.maven</groupId>
                <artifactId>scala-maven-plugin</artifactId>
                <version>${scala-maven-plugin.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>compile</goal>
                            <goal>testCompile</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <jvmArgs>
                        <jvmArg>-Xms64m</jvmArg>
                        <jvmArg>-Xmx1024m</jvmArg>
                    </jvmArgs>
                    <compilerPlugins>
                        <compilerPlugin>
                            <groupId>org.scalamacros</groupId>
                            <artifactId>paradise_2.11.7</artifactId>
                            <version>${scalamacros.version}</version>
                        </compilerPlugin>
                    </compilerPlugins>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>com.typesafe.akka</groupId>
            <artifactId>akka-actor_2.11</artifactId>
            <version>${akka.version}</version>
        </dependency>

